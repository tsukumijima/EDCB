<UserControl x:Class="EpgTimer.Setting.SetEpgView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:EpgTimer" d:DataContext="{d:DesignInstance local:Settings}"
             d:DesignHeight="500" d:DesignWidth="780">
    <UserControl.Resources>
        <VisualBrush x:Key="HatchBrush" TileMode="Tile" Viewbox="0,0,10,10" ViewboxUnits="Absolute" Viewport="0,0,6,6" ViewportUnits="Absolute">
            <VisualBrush.Visual>
                <Canvas Background="White" Width="10" Height="10">
                    <Path Stroke="Black" Data="M 0 0 l 10 10 M 0 10 l 10 -10" />
                </Canvas>
            </VisualBrush.Visual>
        </VisualBrush>
        <Style x:Key="colorButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="ToolTip" Value="{Binding Background, RelativeSource={RelativeSource Self}}"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="58"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <EventSetter Event="Click" Handler="button_Color_Click"/>
            <EventSetter Event="MouseRightButtonUp" Handler="button_MouseRightButtonUp"/>
        </Style>
        <Style x:Key="colorGrid">
            <Style.Resources>
                <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource colorCombo}" />
                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource colorButton}" />
            </Style.Resources>
        </Style>
    </UserControl.Resources>
    <TabControl>
        <TabItem Header="番組表" Name="tabEpg">
            <Grid>
                <TabControl>
                    <TabItem Header="基本" Name="tabEpgBasic">
                        <StackPanel>
                            <GroupBox Header="フォント" Margin="6,6,6,0" >
                                <StackPanel Orientation="Horizontal">
                                    <Grid>
                                        <Label Content="タイトル" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" />
                                        <Label Content="フォント" HorizontalAlignment="Left" Margin="84,6,0,0" VerticalAlignment="Top" />
                                        <ComboBox Height="24" HorizontalAlignment="Left" IsEditable="True" Margin="155,6,0,0" Name="comboBox_fontTitle" Text="{Binding FontNameTitle}" VerticalAlignment="Top" Width="203" ToolTip="カンマ区切りで英字フォント+日本語フォントのようなフォントフォールバックの指定が出来ます。&#10;　(例)Times New Roman, MS UI Gothic"/>
                                        <Label Content="サイズ" HorizontalAlignment="Left" Margin="374,6,0,0" VerticalAlignment="Top" />
                                        <TextBox Height="24" HorizontalAlignment="Left" Margin="426,6,0,0" VerticalAlignment="Top" Width="39" Text="{Binding FontSizeTitle, Converter={StaticResource vcheck},ConverterParameter='72,1'}"/>
                                        <CheckBox Content="太字" Margin="471,11,0,0" IsChecked="{Binding FontBoldTitle}" VerticalAlignment="Top" />
                                        <Label Content="タイトル以外" HorizontalAlignment="Left" Margin="6,36,0,0" VerticalAlignment="Top" />
                                        <Label Content="フォント" HorizontalAlignment="Left" Margin="84,36,0,0" VerticalAlignment="Top" />
                                        <ComboBox Height="24" HorizontalAlignment="Left" IsEditable="True" Margin="155,36,0,0" Text="{Binding FontName}" ItemsSource="{Binding ItemsSource, ElementName=comboBox_fontTitle}" VerticalAlignment="Top" Width="203" ToolTip="{Binding ToolTip, ElementName=comboBox_fontTitle}" />
                                        <Label Content="サイズ" HorizontalAlignment="Left" Margin="374,36,0,0" VerticalAlignment="Top" />
                                        <TextBox Height="24" HorizontalAlignment="Left" Margin="426,36,0,0" VerticalAlignment="Top" Width="39" Text="{Binding FontSize, Converter={StaticResource vcheck},ConverterParameter='72,1'}"/>
                                    </Grid>
                                    <Grid Style="{StaticResource colorGrid}">
                                        <ComboBox Margin="12,6,0,0" Width="96" Name="comboBox_colorTitle1" Tag="0" />
                                        <ComboBox Margin="12,36,0,0" Width="96" Name="comboBox_colorTitle2" Tag="1" />
                                        <Button Margin="116,6,0,0" Name="button_colorTitle1" Tag="0" />
                                        <Button Margin="116,36,0,0" Name="button_colorTitle2" Tag="1" />
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="表示設定" Margin="6,6,6,0" >
                                <Grid>
                                    <Label Content="マウススクロールサイズ" HorizontalAlignment="Left" Margin="11,6,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="165,6,0,0" Text="{Binding ScrollSize}" VerticalAlignment="Top" Width="55" />
                                    <CheckBox Content="自動" Margin="226,11,0,0" IsChecked="{Binding MouseScrollAuto}" VerticalAlignment="Top" />
                                    <Label Content="サービス１つの幅" HorizontalAlignment="Left" Margin="11,36,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="165,36,0,0" Text="{Binding ServiceWidth, Converter={StaticResource vcheck},ConverterParameter='max,16'}" VerticalAlignment="Top" Width="55" />
                                    <CheckBox Content="ツールチップ" Margin="226,41,0,0" IsChecked="{Binding EpgServiceNameTooltip}" VerticalAlignment="Top" ToolTip="サービス名をツールチップに表示します"/>
                                    <Label Content="1分あたりの高さ" HorizontalAlignment="Left" Margin="327,6,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="470,6,0,0" Text="{Binding MinHeight, Converter={StaticResource vcheck},ConverterParameter='max,0.1'}" VerticalAlignment="Top" Width="55" />
                                    <Label Content="ドラッグスクロール倍率" HorizontalAlignment="Left" Margin="327,36,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="470,36,0,0" Text="{Binding DragScroll}" VerticalAlignment="Top" Width="55" />
                                    <Label Content="最低表示行数" HorizontalAlignment="Left" Margin="551,6,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="650,6,0,0" Text="{Binding MinimumHeight, Converter={StaticResource vcheck},ConverterParameter='max,0'}" VerticalAlignment="Top" Width="55" />
                                    <Label Content="枠線の幅" HorizontalAlignment="Left" Margin="551,36,0,0" VerticalAlignment="Top" />
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="634,38,0,0" Text="{Binding EpgBorderLeftSize, Converter={StaticResource vcheck},ConverterParameter='max,0'}" VerticalAlignment="Top" Width="33" ToolTip="横(サービス区切り)"/>
                                    <TextBox Height="24" HorizontalAlignment="Left" Margin="672,38,0,0" Text="{Binding EpgBorderTopSize, Converter={StaticResource vcheck},ConverterParameter='max,0'}" VerticalAlignment="Top" Width="33" ToolTip="縦(番組区切り)"/>
                                    <StackPanel Margin="11,64,0,0" Width="304" HorizontalAlignment="Left">
                                        <CheckBox Content="番組内容のポップアップ表示" Margin="0,6,0,0" IsChecked="{Binding EpgPopup}"/>
                                        <StackPanel Margin="20,0,0,0" IsEnabled="{Binding EpgPopup}" >
                                            <WrapPanel Name="panel_epgPopup">
                                                <RadioButton Tag="0" Content="マウスオーバー" Margin="0,6,12,0" />
                                                <RadioButton Tag="1" Content="クリックしたとき" Margin="0,6,12,0" />
                                                <RadioButton Tag="2" Content="予約のみマウスオーバーで、他はクリックしたとき" Margin="0,6,12,0" />
                                            </WrapPanel>
                                            <WrapPanel>
                                                <Label Content="ポップアップの幅　サービスの幅 ×" />
                                                <TextBox Width="55" Text="{Binding EpgPopupWidth, Converter={StaticResource vcheck},ConverterParameter='max,0'}" />
                                                <Label Content="倍" />
                                            </WrapPanel>
                                        </StackPanel>
                                        <CheckBox Content="詳細をツールチップ表示する" Margin="0,6,0,0" IsChecked="{Binding EpgToolTip}"/>
                                        <StackPanel Margin="20,0,0,0" IsEnabled="{Binding EpgToolTip}" >
                                            <CheckBox Content="番組名を表示しきれない物のみ表示する" Margin="0,6,0,0" IsChecked="{Binding EpgToolTipNoViewOnly}" />
                                            <WrapPanel>
                                                <Label Content="ツールチップを表示するまでの時間(ミリ秒) " />
                                                <TextBox Width="55" Text="{Binding EpgToolTipViewWait}" />
                                            </WrapPanel>
                                        </StackPanel>
                                        <Label Content="番組内容を詳しく表示する" Margin="0,0,0,-4"/>
                                        <WrapPanel Margin="20,0,0,0" >
                                            <CheckBox Content="番組表" Margin="0,6,12,0" IsChecked="{Binding EpgExtInfoTable}" />
                                            <CheckBox Content="ポップアップ" Margin="0,6,12,0" IsChecked="{Binding EpgExtInfoPopup}" />
                                            <CheckBox Content="ツールチップ" Margin="0,6,12,0" IsChecked="{Binding EpgExtInfoTooltip}" />
                                        </WrapPanel>
                                    </StackPanel>
                                    <StackPanel Margin="327,64,0,0" >
                                        <CheckBox Content="シングルクリックで予約ダイアログを開く" Margin="0,6,0,0" IsChecked="{Binding EpgInfoSingleClick}" />
                                        <CheckBox Content="番組詳細タブを選択した状態で予約ダイアログを開く" Margin="0,6,0,0" IsChecked="{Binding EpgInfoOpenMode}" />
                                        <CheckBox Content="番組名と番組内容の表示位置をあわせる" Margin="0,6,0,0" IsChecked="{Binding EpgTitleIndent}" />
                                        <CheckBox Content="番組表の切り替え時にも強調表示をする" Margin="0,6,0,0" IsChecked="{Binding DisplayNotifyEpgChange}" />
                                        <WrapPanel Margin="0,6,0,0">
                                            <Label Content="グラデーション表示を行う" />
                                            <CheckBox Content="番組" Margin="12,0,0,0" IsChecked="{Binding EpgGradation}" />
                                            <CheckBox Content="サービス・時刻軸" Margin="12,0,0,0" IsChecked="{Binding EpgGradationHeader}" />
                                        </WrapPanel>
                                        <GroupBox Header="過去の番組情報" Margin="0,6,0,0" >
                                            <StackPanel>
                                                <StackPanel Name="stackPanel_epgArchivePeriod" Orientation="Horizontal" ToolTip="※現在のEpgTimerSrvの仕様では15日以上を設定すると無期限で保存されます。&#10;　(またこのときEpgTimerSrvの設定画面で保存し直すと「20,000日」に変化します。)" >
                                                    <Label Content="EPG取得後の保存期間" />
                                                    <TextBox Name="textBox_epgArchivePeriod" Width="55" />
                                                    <Label Content="日" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" >
                                                    <Label Content="番組表の初期表示"/>
                                                    <TextBox Width="39" Text="{Binding EpgArcDefaultDays, Converter={StaticResource vcheck},ConverterParameter='366,0'}" />
                                                    <Label Content="日前から" ToolTip="(開発注)EPGデータの内部キャッシュや検索ダイアログは先頭のデザインの初期表示に従います。" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="過去番組表の表示(移動)日数"/>
                                                    <TextBox Width="39" Text="{Binding EpgArcTabWeeks, Converter={StaticResource vcheck},ConverterParameter='53,0'}" ToolTip="表示のみ小数点以下が反映されます。"/>
                                                    <Label Content="週間"/>
                                                    <CheckBox Content="日曜起点" Margin="15,0,0,0" IsChecked="{Binding EpgArcStartSunday}" ToolTip="(開発注)このオプションを有効にしても、アーカイブファイルのアライメントは考慮されません。"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="基本2" Name="tabEpgBasic2">
                        <GroupBox Header="表示設定(続き)" Margin="6,6,6,0" >
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="18" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <DockPanel Grid.ColumnSpan="2" Margin="0,6,0,0">
                                    <Label Content="タイトルの文字列置換リスト（/置換前/置換後/…）" Name="label_replacePatternTitleDef" ToolTip="先頭の文字が区切り記号になります。例えば(,置換前,置換後,…)でも可。"/>
                                    <CheckBox Content="内蔵URL変換(全半角変換)辞書をマージ" Margin="12,0,0,0" Name="checkBox_replacePatternTitleDef" IsChecked="{Binding EpgReplacePatternTitleDef}" ToolTip="追加で内蔵辞書を適用します。ただしその分表示が遅くなります。&#10;同一のキーはテキストボックスの置換を優先します。" />
                                    <CheckBox Content="使用予定チューナー画面にも適用" Margin="12,0,0,0" IsChecked="{Binding ApplyReplacePatternTuner}" ToolTip="有効となっている最初のデザインのリストが適用されます。" />
                                </DockPanel>
                                <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" Name="textBox_ReplacePatternTitle" Text="{Binding EpgReplacePatternTitle}" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="{Binding Text, ElementName=comboBox_FontReplacePatternEdit}" FontSize="{Binding Text, ElementName=textBox_FontSizeReplacePatternEdit}" />
                                <DockPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,6,0,0">
                                    <Label Content="タイトル以外の文字列置換リスト（〃）" Width="{Binding ActualWidth, ElementName=label_replacePatternTitleDef}"/>
                                    <CheckBox Content="内蔵URL変換(全半角変換)辞書をマージ" Margin="12,0,0,0" IsEnabled="{Binding ShareEpgReplacePatternTitle, Converter={StaticResource invert}}" IsChecked="{Binding EpgReplacePatternDef}" ToolTip="{Binding ToolTip, ElementName=checkBox_replacePatternTitleDef}" />
                                    <CheckBox Content="タイトルの置換リストを使用" Margin="12,0,0,0" IsChecked="{Binding ShareEpgReplacePatternTitle}"/>
                                </DockPanel>
                                <local:TextBoxWithReadOnlyEffect Grid.Row="3" Grid.Column="1" VerticalAlignment="Stretch" x:Name="textBox_ReplacePattern" Text="{Binding EpgReplacePattern}" IsReadOnly="{Binding ShareEpgReplacePatternTitle}" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" FontFamily="{Binding Text, ElementName=comboBox_FontReplacePatternEdit}" FontSize="{Binding Text, ElementName=textBox_FontSizeReplacePatternEdit}" />
                                <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,6,0,0" Name="panel_fontReplaceEditFont" >
                                    <DockPanel>
                                        <Label Content="編集欄の表示フォント" Name="label_FontReplacePattern"/>
                                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="12,0,0,0" >
                                            <Label Content="サイズ" />
                                            <TextBox Name="textBox_FontSizeReplacePatternEdit" Width="39" Text="{Binding FontSizeReplacePattern, Converter={StaticResource vcheck},ConverterParameter='72,1'}"/>
                                            <CheckBox Content="太字" Margin="6,0,0,0" Click="checkBox_FontBoldReplacePattern_Click" IsChecked="{Binding FontBoldReplacePattern}"/>
                                        </StackPanel>
                                        <ComboBox Margin="6,0,0,0" Name="comboBox_FontReplacePatternEdit" IsEditable="True" ItemsSource="{Binding ItemsSource, ElementName=comboBox_fontTitle}"/>
                                    </DockPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Label Width="{Binding ActualWidth, ElementName=label_FontReplacePattern}" />
                                        <CheckBox Margin="6,4,0,0" IsChecked="{Binding ReplacePatternEditFontShare}" Content="番組表タイトルのフォントで表示" Click="checkBox_ReplacePatternEditFontShare_Click" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </TabItem>
                    <TabItem Header="色1" Name="tabEpgColor">
                        <StackPanel Style="{StaticResource colorGrid}">
                            <GroupBox Header="ジャンル別背景色" Margin="6,6,6,0" >
                                <Grid x:Name="grid_EpgColors" >
                                    <Label Content="カスタム色" HorizontalAlignment="Left" Margin="292,0,0,0" VerticalAlignment="Top" />
