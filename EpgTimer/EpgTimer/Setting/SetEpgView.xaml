                                    <Label Content="情報／ワイドショー" HorizontalAlignment="Left" Margin="12,53,0,0" VerticalAlignment="Top" />
                                    <Label Content="ドラマ" HorizontalAlignment="Left" Margin="390,53,0,0" VerticalAlignment="Top" />
                                    <Label Content="音楽" HorizontalAlignment="Left" Margin="12,83,0,0" VerticalAlignment="Top" />
                                    <Label Content="バラエティ" HorizontalAlignment="Left" Margin="390,83,0,0" VerticalAlignment="Top" />
                                    <Label Content="映画" HorizontalAlignment="Left" Margin="12,113,0,0" VerticalAlignment="Top" />
                                    <Label Content="アニメ／特撮" HorizontalAlignment="Left" Margin="390,113,0,0" VerticalAlignment="Top" />
                                    <Label Content="ドキュメンタリー／教養" HorizontalAlignment="Left" Margin="12,143,0,0" VerticalAlignment="Top" />
                                    <Label Content="劇場／公演" HorizontalAlignment="Left" Margin="390,143,0,0" VerticalAlignment="Top" />
                                    <Label Content="趣味／教育" HorizontalAlignment="Left" Margin="12,173,0,0" VerticalAlignment="Top" />
                                    <Label Content="福祉" HorizontalAlignment="Left" Margin="390,173,0,0" VerticalAlignment="Top" />
                                    <Label Content="その他" HorizontalAlignment="Left" Margin="12,203,0,0" VerticalAlignment="Top" />
                                    <Label Content="なし" HorizontalAlignment="Left" Margin="390,203,0,0" VerticalAlignment="Top" />
                                    <ComboBox Margin="166,27,0,0" Tag="0" />
                                    <ComboBox Margin="488,27,0,0" Tag="1" />
                                    <ComboBox Margin="166,57,0,0" Tag="2" />
                                    <ComboBox Margin="488,57,0,0" Tag="3" />
                                    <ComboBox Margin="166,87,0,0" Tag="4" />
                                    <ComboBox Margin="488,87,0,0" Tag="5" />
                                    <ComboBox Margin="166,117,0,0" Tag="6" />
                                    <ComboBox Margin="488,117,0,0" Tag="7" />
                                    <ComboBox Margin="166,147,0,0" Tag="8" />
                                    <ComboBox Margin="488,147,0,0" Tag="9" />
                                    <ComboBox Margin="166,177,0,0" Tag="10" />
