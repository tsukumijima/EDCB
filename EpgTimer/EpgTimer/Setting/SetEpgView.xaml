                                    <Button Margin="292,177,0,0" Tag="10" />
                                    <Button Margin="614,177,0,0" Tag="11" />
                                    <Button Margin="292,207,0,0" Tag="15" />
                                    <Button Margin="614,206,0,0" Tag="16" />
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="時刻表示色設定" Margin="6,6,6,0" >
                                <Grid x:Name="grid_EpgTimeColors">
                                    <Label Content="00～05時" HorizontalAlignment="Left" Margin="12,0,0,0" VerticalAlignment="Top" />
                                    <Label Content="06～11時" HorizontalAlignment="Left" Margin="390,0,0,0" VerticalAlignment="Top" />
                                    <Label Content="12～17時" HorizontalAlignment="Left" Margin="12,30,0,0" VerticalAlignment="Top" />
                                    <Label Content="18～23時" HorizontalAlignment="Left" Margin="390,30,0,0" VerticalAlignment="Top" />
                                    <Label Content="時刻表示文字" HorizontalAlignment="Left" Margin="12,60,0,0" VerticalAlignment="Top" />
                                    <Label Content="時刻表示枠" HorizontalAlignment="Left" Margin="390,60,0,0" VerticalAlignment="Top" />
                                    <ComboBox Margin="166,4,0,0" Tag="0" />
                                    <ComboBox Margin="488,4,0,0" Tag="1" />
                                    <ComboBox Margin="166,34,0,0" Tag="2" />
                                    <ComboBox Margin="488,34,0,0" Tag="3" />
                                    <ComboBox Margin="166,64,0,0" Tag="9" />
