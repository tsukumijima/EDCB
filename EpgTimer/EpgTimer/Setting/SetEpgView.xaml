                        </StackPanel>
                    </TabItem>
                    <TabItem Header="色2" Name="tabEpgColor2">
                        <StackPanel Style="{StaticResource colorGrid}">
                            <GroupBox Header="その他色設定" Margin="6,6,6,0" >
                                <Grid x:Name="grid_EpgEtcColors">
                                    <Label Content="カスタム色" HorizontalAlignment="Left" Margin="292,0,0,0" VerticalAlignment="Top" />
                                    <Label Content="カスタム色" HorizontalAlignment="Left" Margin="614,0,0,0" VerticalAlignment="Top" />
                                    <Label Content="番組表背景" HorizontalAlignment="Left" Margin="12,23,0,0" VerticalAlignment="Top" />
                                    <Label Content="番組枠" HorizontalAlignment="Left" Margin="12,53,0,0" VerticalAlignment="Top" />
                                    <Label Content="1週間モード日付枠" HorizontalAlignment="Left" Margin="12,83,0,0" VerticalAlignment="Top" />
                                    <Label Content="サービス文字" HorizontalAlignment="Left" Margin="390,23,0,0" VerticalAlignment="Top" />
                                    <Label Content="サービス背景" HorizontalAlignment="Left" Margin="390,53,0,0" VerticalAlignment="Top" />
                                    <Label Content="サービス枠" HorizontalAlignment="Left" Margin="390,83,0,0" VerticalAlignment="Top" />
                                    <ComboBox Margin="166,27,0,0" Tag="5" />
