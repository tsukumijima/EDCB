                                    <Button Margin="292,57,0,0" Tag="2" />
                                    <Button Margin="614,57,0,0" Tag="3" />
                                    <Button Margin="292,87,0,0" Tag="4" />
                                    <Button Margin="614,87,0,0" Tag="5" />
                                    <Button Margin="292,117,0,0" Tag="6" />
                                    <Button Margin="614,117,0,0" Tag="7" />
