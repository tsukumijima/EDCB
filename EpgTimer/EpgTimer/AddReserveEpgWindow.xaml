<Window x:Class="EpgTimer.AddReserveEpgWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="予約登録" Height="580" Width="740" xmlns:my="clr-namespace:EpgTimer" Loaded="Window_Loaded" PreviewKeyDown="Window_PreviewKeyDown" WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBox Name="textBox_info" IsReadOnly="True" TextWrapping="Wrap" />
        <TabControl Grid.Row="1" Name="tabControl" TabStripPlacement="Bottom" >
            <TabItem Header="予約" Name="tabItem_reserve">
                <my:RecSettingView x:Name="recSettingView" />
            </TabItem>
            <TabItem Header="番組詳細">
                <RichTextBox IsReadOnly="True" Name="richTextBox_descInfo" VerticalScrollBarVisibility="Auto" />
            </TabItem>
        </TabControl>
        <Button Content="予約" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="30,8,0,0" Name="button_add_reserve" VerticalAlignment="Top" Width="90" Click="button_add_reserve_Click" ToolTip="Ctrl + S" />
        <Button Content="キャンセル" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="140,8,0,0" VerticalAlignment="Top" Width="100" Click="button_cancel_Click" />
        <Button Content="番組情報を保存" Grid.Row="2" Height="23" HorizontalAlignment="Left" Margin="290,8,0,0" Name="button_save_program" VerticalAlignment="Top" Width="120" Click="button_save_program_Click" />
    </Grid>
</Window>
