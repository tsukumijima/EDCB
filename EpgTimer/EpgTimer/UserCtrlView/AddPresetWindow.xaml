<Window x:Class="EpgTimer.AddPresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="プリセット追加" Height="120" Width="450" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid>
        <Label Content="プリセット名" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
        <TextBox Height="24" Margin="100,14,12,0" Name="textBox_name" VerticalAlignment="Top" />
        <Button Content="追加" HorizontalAlignment="Right" Margin="0,44,99,0" Name="button_ok" VerticalAlignment="Top" Width="43" IsDefault="True" />
        <Button Content="キャンセル" HorizontalAlignment="Right" Margin="0,44,12,0" VerticalAlignment="Top" Width="81" IsCancel="True" />
        <TextBlock Text="{}" HorizontalAlignment="Left" Margin="79,44,0,0" Name="label_chgMsg" VerticalAlignment="Top" />
    </Grid>
</Window>
